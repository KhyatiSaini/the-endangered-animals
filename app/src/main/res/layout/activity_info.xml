<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/design_default_color_on_secondary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_nameHome"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:paddingBottom="10sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@color/design_default_color_error"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_below="@+id/textView_nameHome"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            app:srcCompat="@drawable/amurleopard" />

        <ImageView
            android:id="@+id/ButtonBack"
            android:layout_width="52dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:padding="10sp"
            android:contentDescription="@string/back"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewHome"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#FAE49834"
            android:padding="20sp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewInfo"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="#A4D868"
            android:padding="20sp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewWhyTheyMatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewStatus"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textColor="#ffffff"
            android:background="#00BCD4"
            android:padding="20sp"
            android:textSize="15sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewEfforts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewWhyTheyMatter"
            android:layout_margin="20sp"
            android:textColor="#ffffff"
            android:background="#E91E63"
            android:padding="20sp"
            android:textSize="15sp"
            android:text="TextView" />

    </RelativeLayout>

</ScrollView>

